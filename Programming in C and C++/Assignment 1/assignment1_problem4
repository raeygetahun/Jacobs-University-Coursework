#include <stdio.h>

int main(){

    int x, y, sum, product, difference, remainder;
    float division;
    
    x = 17;
    y = 4;
    
    printf("x=%d\n",x);
    printf("y=%d\n",y);
    
    sum = x + y;
    printf("sum=%d\n", sum);
    product = x * y;
    printf("product=%d\n",product);
    difference = x - y;
    printf("difference=%d\n", difference);
    division = (float)x / y;
    
    /* type casting must be done to make the result of the division a float */
    printf("division=%f\n", division);
    remainder = x % y;
    printf("remainder of division=%d\n", remainder);

}
